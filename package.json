{
  "name": "dbc-new",
  "version": "1.0.0",
  "main": "src/app",
  "engines": {
    "node": "16.x"
  },
  "type": "module",
  "scripts": {
    "dev": "nodemon src/app.js",
    "git": "git init && git status && git add . && git commit -m 'Committing' && git push",
    "start": "node src/app.js",
    "test": "node --experimental-vm-modules node_modules/.bin/jest"
  },
  "jest": {
    "testEnvironment": "jest-environment-node",
    "transform": {}
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
        "tab"
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "never"
      ],
      "no-unused-vars": "off",
      "require-await": "off"
    }
  },
  "eslintIgnore": [
    "/__tests__",
    "/node_modules",
    "/dist"
  ],
  "prettier": {
    "trailingComma": "none",
    "useTabs": true,
    "semi": false,
    "singleQuote": false,
    "quoteProps": "as-needed",
    "bracketSpacing": true
  },
  "author": "Steve Giordano",
  "license": "ISC",
  "description": "Fullstack app for the Dadboner Twitter account.",
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-handlebars": "^5.3.2",
    "node-cron": "^3.0.0",
    "node-fetch": "^2.6.1",
    "nodemailer": "^6.6.3",
    "pg": "^8.7.1"
  },
  "devDependencies": {
    "eslint": "^7.31.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2"
  }
}
