{
	"name": "dbc-new",
	"version": "1.0.0",
	"main": "src/app",
	"engines": {
		"node": "16.x"
	},
	"type": "module",
	"scripts": {
		"commit": "git init && git status && git add . && git commit -m $MSG && git push",
		"dev": "nodemon bin/server.js",
		"start": "node bin/server.js",
		"test": "mocha components/**/*.test.js --exit"
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"es2021": true,
			"node": true
		},
		"extends": "eslint:recommended",
		"parserOptions": {
			"ecmaVersion": 12,
			"sourceType": "module"
		},
		"rules": {
			"indent": [
				"error",
				"tab"
			],
			"linebreak-style": [
				"error",
				"unix"
			],
			"quotes": [
				"error",
				"double"
			],
			"semi": [
				"error",
				"never"
			],
			"no-unused-vars": 0,
			"require-await": "off"
		}
	},
	"eslintIgnore": [
		"*.test.js",
		"/node_modules",
		"/dist",
		"/sandbox"
	],
	"author": "Steve Giordano",
	"license": "ISC",
	"description": "Fullstack app for the Dadboner Twitter account.",
	"dependencies": {
		"connect-redis": "^6.0.0",
		"cookie-parser": "^1.4.5",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"express-handlebars": "^5.3.2",
		"express-session": "^1.17.2",
		"morgan": "^1.10.0",
		"node-cron": "^3.0.0",
		"node-fetch": "^2.6.1",
		"nodemailer": "^6.6.3",
		"pg": "^8.7.1",
		"redis": "^3.1.2",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"eslint": "^7.31.0",
		"mocha": "^9.0.3",
		"sass": "^1.38.2"
	}
}
